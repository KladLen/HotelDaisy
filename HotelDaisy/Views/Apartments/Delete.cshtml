@using HotelDaisy.Models.ViewModels;

@model ApartmentVM

@{
	ViewData["Title"] = "Delete";
	var id = ViewContext.RouteData.Values["Id"];
}

<h1 class="display-5 pb-4 text-center">Are you sure you want to delete Apartment number @id?</h1>

<form method="post" enctype="multipart/form-data">
	<div class="container">
		<table class="table table-bordered align-middle" style="width:100%">
			<tr>
				<th>
					<label asp-for="Image" class="col-form-label"></label>
				</th>
				<td>
					@if (!string.IsNullOrEmpty(Model.Image))
					{
						<img src="@Model.Image" style="width: 300px; height: auto;" />
					}
				</td>
			</tr>
			<tr>
				<th>
					<label asp-for="NumberOfRooms" class="col-form-label"></label>
				</th>
				<td>
					<input asp-for="NumberOfRooms" type="number" class="form-control" />
				</td>
			</tr>
			<tr>
				<th>
					<label asp-for="Balcony" class="col-form-label"></label>
				</th>
				<td>
					<input asp-for="Balcony" type="checkbox" class="form-check-control" />
				</td>
			</tr>
			<tr>
				<th>
					<label asp-for="Price" class="col-form-label"></label>
				</th>
				<td>
					<input asp-for="Price" type="number" class="form-control" />
				</td>
			</tr>
			<tr>
				<td>
				</td>
				<td>
					<button type="submit" class="btn btn-danger">Delete Apartment</button>
					<a asp-controller="Apartments" asp-action="Index" class="btn btn-secondary">Back to list</a>
				</td>
			</tr>
		</table>
	</div>
</form>
