@model HotelDaisy.Models.ViewModels.ReservationTime

@{
	ViewData["Title"] = "Reservation";
}

<form method="post">
    <div>
	    <h1 class="display-4 text-center">Choose date for your reservation</h1>
    </div>
    <div class="row mt-4">
        <div class="col-md-5">
            <label asp-for="StartDate" class="col-form-label"></label>
            <input asp-for="StartDate" type="date" class="form-control"/>
        </div>
        <div class="col-md-5">
            <label asp-for="EndDate" class="col-form-label"></label>
            <input asp-for="EndDate" type="date" class="form-control"/>
        </div>
        <div class="col-md-2 align-self-end">
            <button type="submit" style="width:100%" class="btn btn-primary mt-3">Check availability</button>
        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger mt-3"></div>
</form>