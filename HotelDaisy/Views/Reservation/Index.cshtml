@model Reservation

@{
	ViewData["Title"] = "Reservation";
}

<div>
	<h1 class="display-4 text-center">Choose date for your reservation</h1>
</div>
<div class="row mt-4">
    <div class="col-md-5">
        <label asp-for="StartDate" class="col-form-label"></label>
        <input asp-for="StartDate" class="form-control"/>
    </div>
    <div class="col-md-5">
        <label asp-for="EndDate" class="col-form-label"></label>
        <input asp-for="EndDate" class="form-control"/>
    </div>
    <div class="col-md-2 align-self-end">
        <a class="btn btn-primary" asp-controller="Reservation" asp-action="Create">Check availability</a>
    </div>
</div>